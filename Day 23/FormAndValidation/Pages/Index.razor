@page "/"

<PageTitle>Form Selector</PageTitle>

<h2>Select a Form</h2>

<div class="btn-group mb-4" role="group">
    <button type="button" 
            class="btn @(selectedForm == FormMode.Customer ? "btn-primary" : "btn-outline-primary")" 
            @onclick="() => selectedForm = FormMode.Customer">
        Customer Contact Form
    </button>
    
    <button type="button" 
            class="btn @(selectedForm == FormMode.Course ? "btn-success" : "btn-outline-success")" 
            @onclick="() => selectedForm = FormMode.Course">
        Course Registration Form
    </button>
</div>

<div class="mt-3">
    @if (selectedForm == FormMode.Customer)
    {
        <CustomerContactForm />
    }
    else if (selectedForm == FormMode.Course)
    {
        <CourseRegistrationForm />
    }
</div>

@code {
    // Using an Enum prevents bugs caused by typos in strings
    private enum FormMode { Customer, Course }
    
    private FormMode selectedForm = FormMode.Customer;
}